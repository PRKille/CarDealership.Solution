@using CarDealership.Models;

<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>Car Dealership</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  </head>
  <body>
    <div class="container">
        <div class="jumbotron">
          <h1>Lonnie's Car Dealership</h1>
        </div>
        @if (Model.Count == 0)
        {
          <h3>There are no cars matching your search criteria.</h3>
        }
        <h3>Cars Matching Your Search:</h3>
        <ul>
          @foreach (Car car in Model)
          {
            <li>@car.MakeModel</li>
            <ul>
              <li>Price: $@car.Price</li>
              <li>Miles: @car.Miles</li>
              <li>@car.Message</li>
            </ul>
          }
        </ul>
        <p><a href="/index">Click here</a> to return to the home page.</p>
      </div>
  </body>
</html>